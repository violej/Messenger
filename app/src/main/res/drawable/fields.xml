            <shape android:shape="rectangle">
                <corners android:radius="20dp"/>
                <stroke android:width="4dp" android:color="#69306D"/>
                <solid android:color="#69306D"/>
            </shape>
        </item>
        <item android:state_focused="true">
            <shape android:shape="rectangle">
            <corners android:radius="20dp"/>
            <corners android:radius="20dp"/>
            <stroke android:width="4dp" android:color="#69306D"/>
            <solid android:color="#69306D"/>
            </shape>
        </item>
        <item>
            <shape android:shape="rectangle">
                <corners android:radius="20dp"/>
                <stroke android:width="4dp" android:color="#69306D"/>
                <solid android:color="#F2D7EE"/>
            </shape>
        </item>
</selector>